{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha: active file",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["${file}", "--no-timeouts", "--colors"],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "env": { "CFG_ENV": "test" }
    }
  ]
}
